.consum-his{
	padding:22rpx 30rpx 32rpx 30rpx;
	background:#ffffff;
	border-radius: 10rpx;
}
.consum-title{
	font-size: 28rpx;
	color: #333333;
	line-height: 40rpx;
}
.consum-top{
	margin-top:10rpx;
}
.consum-item{
	margin-bottom:10rpx;
}
.consum-card-item{
	display:table;
	padding:0 10rpx;
	background: rgba(198,152,61,0.12);
	border-radius: 4rpx;
	font-size: 22rpx;
	color: #C6983D;
	line-height:40rpx;
	text-align:center;
}

