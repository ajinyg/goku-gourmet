/*详情卡片*/
.buy-detalis-items{
	position:relative;
	padding-top:43rpx;
	margin:0 auto;
	width:670rpx;
	height:auto;
	overflow:hidden;
	background: #ffffff;
	box-shadow: 0 2rpx 27rpx 0rpx rgba(0,0,0,0.04);
	border-radius: 16rpx;
	margin-bottom:40rpx;
}
.user-information{
	display:flex;
	width:600rpx;
	/*height:100rpx;*/
	margin:0 auto;

}
.user-tips-txt{
	font-size: 28rpx;
	color: #FA862A;
	line-height:73rpx;
}
.user-buy-img{
	width:73rpx;
	height:73rpx;
	background:#f7f7f7;
	border-radius:50%;
	margin-right:24rpx;
	overflow:hidden;
	display:block;
}
.shuliang-num{
	margin-bottom:10rpx;
	font-size: 26rpx;
	color: #A97841;
}
.chajia-tips{
	margin-bottom:27rpx;
	font-size: 24rpx;
	color: #CCA76D;
}
.buy-datalis{
	position:absolute;
	top:0;
	right:0;
	width:103rpx;
	height:44rpx;
	line-height:44rpx;
	text-align:center;
	font-size: 24rpx;
	border-radius:0 10rpx 0 20rpx;
}
/*未送出*/
.wait{
	color: #C38747;
	background:#fbd478;
}
/*进行中*/
.sending{
	color: #ffffff;
	background:#f64e43;
}
/*已结束*/
.end{
	color: #ffffff;
	background:#a6a99d;
}
/*已超时*/
.timeout{
	color: #ffffff;
	background:#a6a99d;
}
/*已退款*/
.refund{
	color: #ffffff;
	background:#a6a99d;
}
/*底部信息*/
.buy-b-info{
	width:670rpx;
	height:61rpx;
	border-top:1rpx solid rgba(220,175,124,.15);

}
.yx-date{
	display:inline-block;
	width:400rpx;
	height:61rpx;
	line-height:61rpx;
	font-size:22rpx;
	color:#CCA76D;
	text-align:center;
	margin-left:20rpx;
}
.details-btn{
	float:right;
	margin-right:30rpx;
	display:inline-block;
	text-align: center;
	font-size:22rpx;
	color: #CCA76D;
	line-height:61rpx;
	background:url('http://img08.oneniceapp.com/upload/resource/63bafcf35c0f722b4c6007b4aa691b8e.png') right no-repeat;
	background-size:20rpx;
	padding-right:25rpx;
}