/*----------*/
.calendar-header{
	display: flex;
	border-bottom: 1rpx solid #eeeeee;
}
.head-data{
	width: 110rpx;
	height:110rpx;
	line-height:110rpx;
	text-align: center;
	font-size: 24rpx;
	color: #333333;
}
.mouthhead{
	text-align:center;
  font-size:52rpx;
  background:#f1f1f1;
  padding:20rpx 0;
  border-bottom:2rpx solid #ececec; 
}
.mouth{
  overflow:hidden;
  /*padding-bottom:20rpx;*/
}
.daybox{
	width: 750rpx;
	align-items:center;
	justify-content:center;
	overflow:hidden;
  padding-left:5rpx;
  padding:10rpx 0;
}
.day-null{
	float: left;
  width: 80rpx;
  height:80rpx;
  line-height:80rpx;
  text-align: center;
  margin:15rpx 15rpx 15rpx 13rpx;
}
.day-item{ 
  float: left;
  width: 80rpx;
  height:80rpx;
  text-align: center;
  /*display: inline-block;*/
  font-size:36rpx;
  margin:15rpx 15rpx 15rpx 13rpx;
  border-radius:50%;
  color:#484848;
  display:flex;
  flex-direction:column;
  justify-content:center;
}
.day-item.active{
  background-image: linear-gradient(-136deg, #FFC28C 0%, #FF7954 100%);
  color:#ffffff;
}

.day-year{
  font-size:40rpx;
  float:left;
  width:100rpx;
  height:100rpx;
  line-height:140rpx;
  text-align:center;
  font-weight:bold;
  margin-left:8rpx;
  color:#484848;
}
.day_active{
  width:65rpx;
  height:65rpx;
  border-radius:50%;
  display:inline-block;
  line-height:65rpx;
}
.day_active.active{
  background-image: linear-gradient(-136deg, #FFC28C 0%, #FF7954 100%);
  color:#ffffff;
}
.day_active.no-active{
  color:#e7e7e7;
}
.day-year.on{
  color:#F1712D;
}
.bor-bottom{
  position: relative;
  display:inline-block;
  border-bottom:1rpx solid #E7E7E7;
  wdith:80rpx;
  padding-bottom:10rpx;
}
.is-off{
  position: absolute;
  top:0rpx;
  right:-20rpx;
  width:66rpx;
  height:30rpx;
  background:url('http://img08.oneniceapp.com/upload/resource/a1080ac604cb589117ad6d2f412d95b2.png') center no-repeat;
  background-size:100%;
  color: #FFFFFF;
  font-size: 20rpx;
  line-height:30rpx;
  text-align: center;
}
.is-off-no{
  position: absolute;
  top:0rpx;
  right:10rpx;
  width:66rpx;
  height:30rpx;
  background:url('http://img08.oneniceapp.com/upload/resource/a1080ac604cb589117ad6d2f412d95b2.png') center no-repeat;
  background-size:100%;
  color: #FFFFFF;
  font-size: 16rpx;
  line-height:30rpx;
  text-align: center;
}

