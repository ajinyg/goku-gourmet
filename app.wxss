@import '/template/index-item/index-item-template.wxss';
@import '/template/index-head/index-head-template.wxss';
/**app.wxss**/
.fl{
	float: left;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.m-50{
	margin-left:50rpx;
}
.mar-35{
	margin-top:35rpx;
}

.container {
	width: 750rpx;
	overflow:hidden;
	-webkit-overflow-scrolling : touch;
} 
.row{
	position: relative;
	padding:0 10rpx 5rpx 0;
	display:flex;
	font-size:26rpx;
}
.page-loading{
	display:flex;
	justify-content:center;
	align-item:center;
	font-size:28rpx;
	margin-top:40rpx;
	padding-bottom: 20rpx;
	color:#999999;
	line-height:42rpx;
}
.page-loadings{
	display:table;
	margin:0 auto;
	font-size:28rpx;
	margin-top:40rpx;
	padding-bottom: 20rpx;
	color:#999999;
	line-height:42rpx;
}
.img-loading{
	width:65rpx;
	height:65rpx;
	padding-left:25rpx;
}
.sv{
	height:1200rpx;
}
.coupon-title{ 
	font-size:36rpx;
}
/*
	banner 轮播
*/
.swiper-container,.swiper,image{
	width:750rpx;
	height:384rpx;
}

/*按钮*/
button::after{
	border: none;
}
button{
	background:transparent;
	text-align:left;
	line-height:inherit;
	border-radius:none;
	overflow:inherit;
}
.button-hover{
	background:transparent;
}
.coupon-view{
	position:fixed;
	left:0;
	bottom: 0;	
	width:750rpx;
	height:auto;
	background:#ffffff;
	box-shadow:0 -1rpx 8rpx 0 rgba(0,0,0,.08);
	z-index:999999999;
}
.coupon-view .coupon-btn{ 
	width:670rpx;
	height:96rpx;
	line-height:96rpx;
	text-align:center;
	background:#F1712D;
	border-radius:8rpx;
	color:#ffffff;
	font-size:32rpx;
	margin:10rpx auto;
	font-weight:bold;
}
.coupon-btn.button-hover{
	background:#df5c04;
}
.mamber-btn.button-hover{
	background:#df5c04;
}
.btn-sub.button-hover{
	background:#df5c04;
}
.casual-btn.button-hover{
	background:#F1712D;
	color:#ffffff;
}
.btn-sub.button-hover{
	background:#df5c04;
}
.history-btn.button-hover{
	background:#df5c04;
}
.share-re-btn.button-hover{
	background:#e6e6e6;
}
/*设置list 点击效果*/
.setup-row.button-hover{
	background:#f7f7f7 url(http://img08.oneniceapp.com/upload/resource/2efbbeca4e2d0fa49cd21fa4fed5d0f0.png) right no-repeat;
	background-size:7%;
	background-position-x:680rpx;
}
