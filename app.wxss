*/
/* user 头像 */
.user-head{
	position: absolute;
	top: -71rpx;
	left: 0;
	right: 0;
	bottom: 0;
	margin: 0 auto;
	width: 144rpx;
	height: 144rpx;
	background: #f7f7f7;
	border-radius: 50%;
	overflow:hidden;
	display:block;
}
/* user 名称 */
.user-name{
	width: 380rpx;
	height: 84rpx;
	margin: 0 auto;
	padding-top: 100rpx;
	font-size: 30rpx;
	color: #FA862A;
	text-align: center;
	padding-bottom:43rpx;

}
/*iphone-logo*/
.iphonex-logo{
	margin:90rpx auto 0 auto;
	width:505rpx;
	height:113rpx;
	background:url('http://img08.oneniceapp.com/upload/resource/c63ae40e07de2bd125ad18ad1cc1c782.png') center no-repeat;
	background-size:100%;
}
/*headt - bg - gray*/
.bg-gray{
	background: #f7f7f7;
}
/*common title*/
.activity-t{
	display:table;
	margin:0 auto;
	padding-top:43rpx;
}
.activity-t .dix-fex{
	display:flex;
    align-items: center;
}
.activity-t .dix-fex .icon-t{
	width:55rpx;
	height:20rpx;
}
/*left -> icon*/
.activity-t .dix-fex .icon-t.ac-l{
	background:url('http://img08.oneniceapp.com/upload/resource/ad7b71eae67ecf46b8d52d843a73f433.png') center no-repeat;
	background-size:90%;
}
/*right -> icon*/
.activity-t .dix-fex .icon-t.ac-r{
	background:url('http://img08.oneniceapp.com/upload/resource/7c5efbd2b29ab1e86636b9a42b7f250c.png') center no-repeat;
	background-size:90%;
}
.activity-t .dix-fex .dix-t-mr{
	padding:0 11rpx;
	font-size:36rpx;
}
/*
	未读消息 － 了解一下
*/
.unread-tips{
	position:fixed;
	bottom:10rpx;
	right:72rpx;
	width:102rpx;
	height:40rpx;
	background:#ec3c3d;
	border-radius:8rpx;
	color:#ffffff;
	text-align:center;
	line-height:40rpx;
	font-size: 22rpx;
}
.unread-tips::after{ 
	content:" "; 
	border-left: 9rpx solid transparent;
	border-top: 9rpx solid #ec3c3d;
	border-bottom: 9rpx solid transparent; 
	border-right: 9rpx solid transparent;
	position: absolute;
	bottom: -15rpx;
	left: 40rpx;
}

